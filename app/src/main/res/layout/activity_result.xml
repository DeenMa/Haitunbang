<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_layout_result"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_result_title"
            android:textSize="@dimen/text_size_large"/>

        <TextView
            android:id="@+id/text_result_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_result_details"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_result_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_close"
        android:textColor="@color/white"
        android:background="@color/blue"/>
</LinearLayout>